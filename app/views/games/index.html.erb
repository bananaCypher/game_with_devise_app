<h1>Game#index</h1>
<p>Find me in app/views/game/index.html.erb</p>

<%= link_to 'New Game', new_game_path %>

<table>
  <th>
    <tr>
      <td>Name</td>
      <td>Description</td>
      <td>Image</td>
      <td>Actions</td>
    </tr>
  </th>
  <% @games.each do |game| %>
    <tr>
      <td><%= game.name %></td>
      <td><%= game.description %></td>
      <td><%= image_tag game.image %></td>
      <td>
        <%= link_to 'Show', game_path(game) %>
        <br>
        <%= link_to 'Edit', edit_game_path(game) %>
        <br>
        <%= link_to 'Delete', game_path(game), method: :delete %>
        <br>
        <%= link_to 'Add to my collection', add_game_copy_path(game) %>
      </td>
    </tr>
  <% end %>
</table>